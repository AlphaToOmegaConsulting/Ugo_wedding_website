---
interface Props {
  title: string;
  subtitle?: string;
  sections: Array<{
    icon?: string;
    title: string;
    content: string;
  }>;
  layout?: 'grid' | 'list';
  columns?: 2 | 3;
  class?: string;
}

const {
  title,
  subtitle,
  sections,
  layout = 'grid',
  columns = 2,
  class: className = '',
} = Astro.props;

const gridClasses = columns === 3 
  ? 'grid-cols-1 md:grid-cols-2 lg:grid-cols-3' 
  : 'grid-cols-1 md:grid-cols-2';

const sectionClasses = [
  'py-16 md:py-24 bg-white',
  className,
].filter(Boolean).join(' ');
---

<section class={sectionClasses}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold font-heading text-brand-primary mb-4">
        {title}
      </h2>
      {subtitle && (
        <p class="text-lg sm:text-xl text-gray-600">
          {subtitle}
        </p>
      )}
    </div>

    {layout === 'grid' ? (
      <div class={`grid ${gridClasses} gap-6 lg:gap-8`}>
        {sections.map((section) => (
          <div class="bg-gray-50 rounded-lg p-6 hover:shadow-md transition-shadow">
            {section.icon && (
              <div class="text-4xl mb-4" aria-hidden="true">
                {section.icon}
              </div>
            )}
            <h3 class="text-xl font-bold text-brand-primary mb-3">
              {section.title}
            </h3>
            <div class="prose prose-base max-w-none text-gray-700" set:html={section.content} />
          </div>
        ))}
      </div>
    ) : (
      <div class="max-w-3xl mx-auto space-y-8">
        {sections.map((section) => (
          <div class="border-l-4 border-brand-accent pl-6 py-2">
            <div class="flex items-start gap-4">
              {section.icon && (
                <div class="flex-shrink-0 text-3xl" aria-hidden="true">
                  {section.icon}
                </div>
              )}
              <div class="flex-grow">
                <h3 class="text-xl font-bold text-brand-primary mb-3">
                  {section.title}
                </h3>
                <div class="prose prose-base max-w-none text-gray-700" set:html={section.content} />
              </div>
            </div>
          </div>
        ))}
      </div>
    )}
  </div>
</section>
