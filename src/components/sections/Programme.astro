---
interface Props {
  title: string;
  subtitle?: string;
  schedule: Array<{
    time: string;
    event: string;
    description?: string;
    location?: string;
  }>;
  variant?: 'timeline' | 'list';
  class?: string;
}

const {
  title,
  subtitle,
  schedule,
  variant = 'timeline',
  class: className = '',
} = Astro.props;

const sectionClasses = [
  'py-16 md:py-24 bg-white',
  className,
].filter(Boolean).join(' ');
---

<section class={sectionClasses}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold font-heading text-brand-primary mb-4">
        {title}
      </h2>
      {subtitle && (
        <p class="text-lg sm:text-xl text-gray-600">
          {subtitle}
        </p>
      )}
    </div>

    {variant === 'timeline' ? (
      <div class="relative">
        {/* Timeline line */}
        <div class="absolute left-8 md:left-1/2 top-0 bottom-0 w-0.5 bg-brand-accent transform md:-translate-x-1/2" aria-hidden="true"></div>

        <div class="space-y-8">
          {schedule.map((item) => (
            <div class="relative flex flex-col md:flex-row md:items-center gap-4">
              {/* Time badge */}
              <div class="flex items-center gap-4 md:w-1/2 md:justify-end md:pr-8">
                <div class="flex-shrink-0 w-16 h-16 rounded-full bg-brand-accent text-white flex items-center justify-center font-bold text-sm z-10">
                  {item.time}
                </div>
                <div class="md:hidden flex-grow">
                  <h3 class="text-xl font-bold text-brand-primary mb-1">
                    {item.event}
                  </h3>
                  {item.location && (
                    <p class="text-sm text-gray-600 mb-2">
                      üìç {item.location}
                    </p>
                  )}
                  {item.description && (
                    <p class="text-base text-gray-700">
                      {item.description}
                    </p>
                  )}
                </div>
              </div>

              {/* Content (desktop only) */}
              <div class="hidden md:block md:w-1/2 md:pl-8">
                <h3 class="text-xl font-bold text-brand-primary mb-1">
                  {item.event}
                </h3>
                {item.location && (
                  <p class="text-sm text-gray-600 mb-2">
                    üìç {item.location}
                  </p>
                )}
                {item.description && (
                  <p class="text-base text-gray-700">
                    {item.description}
                  </p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    ) : (
      <div class="space-y-6">
        {schedule.map((item) => (
          <div class="bg-gray-50 rounded-lg p-6 hover:shadow-md transition-shadow">
            <div class="flex flex-col sm:flex-row sm:items-start gap-4">
              <div class="flex-shrink-0">
                <span class="inline-block px-4 py-2 bg-brand-accent text-white font-bold rounded-md">
                  {item.time}
                </span>
              </div>
              <div class="flex-grow">
                <h3 class="text-xl font-bold text-brand-primary mb-1">
                  {item.event}
                </h3>
                {item.location && (
                  <p class="text-sm text-gray-600 mb-2">
                    üìç {item.location}
                  </p>
                )}
                {item.description && (
                  <p class="text-base text-gray-700">
                    {item.description}
                  </p>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    )}
  </div>
</section>
