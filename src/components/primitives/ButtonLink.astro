---
/**
 * ButtonLink Component
 * 
 * A styled link that looks like a button. Supports multiple variants and sizes.
 * Uses Alpha Web Core brand colors for primary variant, standard Tailwind for others.
 * 
 * @example
 * ```astro
 * <!-- Primary button (uses brand colors) -->
 * <ButtonLink href="/signup" variant="primary" size="lg">
 *   Get Started
 * </ButtonLink>
 * 
 * <!-- Secondary button (neutral gray) -->
 * <ButtonLink href="/docs" variant="secondary">
 *   Learn More
 * </ButtonLink>
 * 
 * <!-- Ghost button (transparent with brand text) -->
 * <ButtonLink href="/about" variant="ghost" size="sm">
 *   About Us
 * </ButtonLink>
 * ```
 * 
 * Theming Notes:
 * - Primary variant uses `bg-brand-accent` and `hover:bg-brand-primary`
 * - Secondary variant uses standard Tailwind gray colors
 * - Ghost variant uses `text-brand-primary` for brand consistency
 * - Focus ring uses `ring-brand-accent` for accessibility
 */
interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  target?: '_blank' | '_self';
  rel?: string;
  class?: string;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  target,
  rel,
  class: className = '',
} = Astro.props;

// Get base path from Astro config
const base = import.meta.env.BASE_URL;

/**
 * Resolve href to include base path for relative URLs
 * - External URLs (http://, https://) are left unchanged
 * - Absolute URLs (starting with /) are left unchanged
 * - Relative URLs are prefixed with the base path
 */
function resolveHref(href: string): string {
  // Laisser passer les URLs externes
  if (href.startsWith('http://') || href.startsWith('https://')) {
    return href;
  }
  // Si déjà absolu (commence par /), laisser tel quel
  if (href.startsWith('/')) {
    return href;
  }
  // Sinon, c'est relatif : préfixer avec base
  // S'assurer qu'il y a un slash entre base et href
  const normalizedBase = base.endsWith('/') ? base.slice(0, -1) : base;
  return `${normalizedBase}/${href}`;
}

const resolvedHref = resolveHref(href);

const variantClasses = {
  primary: 'bg-brand-accent text-white hover:bg-brand-primary active:opacity-90',
  secondary: 'bg-gray-600 text-white hover:bg-gray-700 active:bg-gray-800',
  ghost: 'bg-transparent text-brand-primary hover:bg-gray-50 active:bg-gray-100',
};

const sizeClasses = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-4 py-2 text-base',
  lg: 'px-6 py-3 text-lg',
};

const baseClasses = 'inline-flex items-center justify-center font-medium rounded-md transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-accent focus-visible:ring-offset-2 no-underline';

const classes = [
  baseClasses,
  variantClasses[variant],
  sizeClasses[size],
  className,
].filter(Boolean).join(' ');
---

<a
  href={resolvedHref}
  class={classes}
  target={target}
  rel={rel}
>
  <slot />
</a>
